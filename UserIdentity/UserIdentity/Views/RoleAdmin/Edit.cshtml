@model UserIdentity.Models.RoleEditModel
@{
                /**/

                ViewBag.Title = "Edit";
}

<!-- modelden gelen bilgileri iki ayrı panelde listeliyoruz yani members lar ve nonmembers lar olarak -->

@using (Html.BeginForm())
{
    <input type="hidden" name="RoleName" value="@Model.Role.Name" /> // post action una gidecek bilgiler
    <input type="hidden" name="RoleId" value="@Model.Role.Id" /> // post action una gidecek bilgiler

    <div class="panel panel-primary">
        <div class="panel-heading">
            Add to @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.NonMembers.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenebilecek kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>User</td>
                    <td>Role</td>
                </tr>

                foreach (var user in Model.NonMembers)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>


    <div class="panel panel-primary">
        <div class="panel-heading">
            Remove from @Model.Role.Name
        </div>
        <table class="table table-striped">
            @if (Model.Members.Count() == 0)
            {
                <tr><td colspan="2">Bu role eklenmiş bir kullanıcı yok</td></tr>
            }
            else
            {
                <tr>
                    <td>User</td>
                    <td>Role</td>
                </tr>

                foreach (var user in Model.Members)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>
                            <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}

