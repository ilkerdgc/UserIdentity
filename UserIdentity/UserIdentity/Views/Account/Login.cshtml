@model UserIdentity.Models.LoginModel
@{
                /**/

                ViewBag.Title = "Login";
}

<h2>Login</h2>
<hr />

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" /> // bunu yazmamızdaki sebep kullanıcı url de eğer login içerisine gelipte url de ReturnUrl varsa burada kullanıcı giriş yaptıktan sonra ReturnUrl de yazan adrese gitsin diye yani kullanıcıyı daha önceden gitmek istediği alana gönderelim diye. Kullanıcı Yetkilendirme videosu dakika 8.30 dan sonra izleyebilirsin

    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
}

